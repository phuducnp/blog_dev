<p id="notice"><%= notice %></p>

<h1>Articles</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to(article.title, article) %></td>
        <td><%= article.content %></td>
        <td><%= link_to 'Show', article, class: 'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', article, class: 'btn btn-danger',method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path, class: 'btn btn-outline-primary' %>
